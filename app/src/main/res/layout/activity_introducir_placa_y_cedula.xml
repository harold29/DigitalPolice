<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pantallas_con_colores_chacao"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".introducir_placa">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

        <TextView
            android:id="@+id/placa_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Introduzca el número de\ncédula o placa a consultar."
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="28dp" />

        <TextView
            android:id="@+id/ejemplo_text_view"
            android:layout_below="@id/placa_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Ejemplos de cedula:\n       V21615116\n       E81643123\n\nEjemplos  de  placa:\n         MDK34F\n        AF902KS"
            android:textColor="#757575"
            android:textSize="18dp" />





        <EditText
            android:id="@+id/placa_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="40dp"
            android:layout_below="@id/ejemplo_text_view"
            android:layout_centerInParent="true"
            android:hint="MDK34F"
            android:inputType="text"
            android:textColor="#000000"
            android:textSize="40dp" />

        <Button
            android:id="@+id/consultar_placa_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="36dp"
            android:background="@drawable/consultar_button"
            android:onClick="multaVehiculo"
            android:text="CONSULTAR"
            android:padding="8dp"
            android:textSize="30dp" />

    </RelativeLayout>

</LinearLayout>
