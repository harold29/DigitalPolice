<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/GridLayout1"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_gravity="top|center"
android:columnCount="1"
tools:context=".GridLayoutActivity" >

<TextView
    android:id="@+id/multa"
    android:layout_width="385dp"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_column="0"
    android:layout_gravity="fill_horizontal"
    android:layout_row="0"
    android:text="Consulta de Datos"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:textSize="30sp"
    android:background="#2196F3"
    android:textColor="#FFFFFF"
    android:fontFamily="Roboto-Thin"
    />

<!--fila 2-->

<TextView

    android:layout_column="0"
    android:layout_gravity="fill_horizontal"
    android:gravity="center"
    android:layout_row="1"
    android:text="Introduzca un número de placa ó CI:"
    android:fontFamily="Roboto-Thin"
    android:textSize="18sp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:textColor="#000000"/>
<TextView

    android:layout_column="0"
    android:layout_gravity="fill_horizontal"
    android:gravity="center"
    android:layout_row="2"
    android:text="Ejemplo (Cédula): V19314993"
    android:fontFamily="Roboto-Thin"
    android:textSize="15sp"
    android:paddingTop="10dp"
    android:textColor="#000000"/>

<TextView

    android:layout_column="0"
    android:layout_gravity="fill_horizontal"
    android:gravity="center"
    android:layout_row="3"
    android:text="Ejemplo (Placa): AC062HA"
    android:fontFamily="Roboto-Thin"
    android:textSize="15sp"
    android:paddingTop="5dp"
    android:paddingBottom="40dp"
    android:textColor="#000000"/>
<!--fila 4-->

<EditText
    android:id="@+id/id_a_consultar_edit_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_column="0"
    android:layout_gravity="center"
    android:layout_row="4"
    android:gravity="center"
    android:paddingTop="40dp"
    android:hint="Placa/Cédula"
    android:inputType="text"
    android:textColor="#000000"
    android:layout_marginRight="15dp"
    android:textSize="30sp"
    android:paddingBottom="40dp"/>
/>

<!--fila 4-->

<ImageButton
    android:layout_column="0"
    android:layout_gravity="center"
    android:layout_marginRight="15dp"
    android:layout_row="5"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:onClick="mostrarMultaCedulaPlaca"
    android:background="@drawable/consultar_placa_cedula"/>

</GridLayout>
