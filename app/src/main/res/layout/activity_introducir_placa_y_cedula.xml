<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pantallas_con_colores_chacao"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".introducir_placa_y_cedula">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="4"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cedula_pequena_image_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:paddingBottom="18dp"
            android:scaleType="centerCrop"
            android:src="@drawable/student_id" />

        <EditText
            android:id="@+id/cedula_pequena_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="32dp"
            android:layout_toRightOf="@id/cedula_pequena_image_view"
            android:hint="21615116"
            android:inputType="number"
            android:textColor="#000000"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/cedula_pequena_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/cedula_pequena_edit_text"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/cedula_pequena_image_view"
            android:text="Numero de Cedula"
            android:textColor="#000000"
            android:textSize="24dp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="4"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/placa_pequena_image_view"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:paddingBottom="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/carro" />

        <TextView
            android:id="@+id/placa_pequena_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/placa_pequena_image_view"
            android:text="Numero de Placa"
            android:textColor="#000000"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/placa_pequena_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/placa_pequena_text_view"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="32dp"
            android:layout_toRightOf="@id/placa_pequena_image_view"
            android:hint="MDK34F"
            android:inputType="text"
            android:textColor="#000000"
            android:textSize="30dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <Button
            android:id="@+id/consultar_placa_button"
            android:layout_width="wrap_content"
            android:onClick="mostrarMultaCedulaPlaca"
            android:layout_height="wrap_content"
            android:background="@drawable/consultar_button"
            android:text="CONSULTAR"
            android:padding="8dp"
            android:layout_centerInParent="true"
            android:textSize="30dp" />
    </RelativeLayout>

</LinearLayout>
