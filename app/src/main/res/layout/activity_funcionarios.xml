<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.android.retochacao.Funcionarios"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/foto_funcionario1"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/funcionario"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:id="@+id/Nombre_funcionario1"
            android:text="Fernando Saraiva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/ID_F1"
            android:text="ID 42098"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/Nombre_funcionario1"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/guardia1"
            android:text="Activo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/ID_F1"
            android:textColor="#000000"
            android:layout_margin="15dp"
            android:padding="5dp"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/on_green"
            android:layout_alignBottom="@+id/guardia1"
            android:layout_alignLeft="@+id/Nombre_funcionario1"
            android:layout_alignStart="@+id/Nombre_funcionario1" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/foto_funcionario2"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/funcionario"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:id="@+id/Nombre_funcionario2"
            android:text="Jose Alvarez"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/ID_F2"
            android:text="ID 54077"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/Nombre_funcionario2"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/guardia2"
            android:text="Inactivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/ID_F2"
            android:textColor="#000000"
            android:layout_margin="15dp"
            android:padding="5dp"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/off_red"
            android:layout_alignBottom="@+id/guardia2"
            android:layout_toLeftOf="@+id/guardia2"
            android:layout_toStartOf="@+id/guardia2" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/foto_funcionario3"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/funcionario"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:id="@+id/Nombre_funcionario3"
            android:text="Harold Perez"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/ID_F3"
            android:text="ID 54077"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/Nombre_funcionario3"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/guardia3"
            android:text="Activo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/ID_F3"
            android:textColor="#000000"
            android:layout_margin="15dp"
            android:padding="5dp"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/on_green"
            android:layout_alignBottom="@+id/guardia3"
            android:layout_toLeftOf="@+id/guardia3"
            android:layout_toStartOf="@+id/guardia3" />

    </RelativeLayout>

</LinearLayout>
