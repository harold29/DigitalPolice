<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:columnCount="4"
    tools:context=".GridLayoutActivity" >

    <TextView
        android:layout_width="385dp"
        android:layout_height="match_parent"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_column="0"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_row="0"
        android:textSize="30sp"
        android:text="Funcionarios"
        android:background="#2196F3"
        android:textColor="#FFFFFF"
        android:fontFamily="Roboto-Thin"
        android:layout_columnSpan="3"
        />
    <TextView
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_row="1"
        android:text="Estatus"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:textSize="15sp"
        android:fontFamily="Roboto-Thin"
        android:textStyle="bold"
        android:textColor="#000000"
        />

    <!--fila 2-->
    <ImageView
        android:layout_height="20dp"
        android:layout_width="20dp"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="2"
        android:src="@drawable/on_green"
        android:layout_rowSpan="2"/>



    <ImageView
        android:id="@+id/foto_funcionario1"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_row="2"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:scaleType="centerCrop"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_margin="5dp"
        android:src="@drawable/miguel_saraiva"
        android:layout_rowSpan="2"
        />

    <TextView

        android:layout_column="2"
        android:layout_row="2"
        android:layout_gravity="left"
        android:text="Fernando Saraiva"
        android:paddingLeft="8dp"
        android:fontFamily="Roboto-Thin"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        />


    <TextView
        android:id="@+id/ID_F1"
        android:layout_column="2"
        android:layout_row="3"
        android:layout_gravity="left"
        android:text="ID 42098"
        android:paddingLeft="8dp"
        android:fontFamily="Roboto-Thin"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <!--fila 3-->

    <ImageView
        android:layout_height="20dp"
        android:layout_width="20dp"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="4"
        android:src="@drawable/off_red"
        android:layout_rowSpan="2"/>

    <ImageView
        android:id="@+id/foto_funcionario2"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_row="4"
        android:text="Button"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:scaleType="centerCrop"
        android:src="@drawable/jose_alvarez"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_margin="5dp"
        android:layout_rowSpan="2"
        />

    <TextView
        android:layout_column="2"
        android:layout_row="4"
        android:layout_gravity="left"
        android:text="José Alvarez"
        android:paddingLeft="8dp"
        android:fontFamily="Roboto-Thin"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/ID_F2"
        android:layout_column="2"
        android:layout_row="5"
        android:layout_gravity="left"
        android:text="ID 54077"
        android:paddingLeft="8dp"
        android:fontFamily="Roboto-Thin"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <!--fila 4-->
    <ImageView
        android:layout_height="20dp"
        android:layout_width="20dp"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="6"
        android:src="@drawable/on_green"
        android:layout_rowSpan="2"
        />


    <ImageView

        android:layout_column="1"
        android:layout_gravity="left|center"
        android:layout_row="6"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:scaleType="centerCrop"
        android:src="@drawable/harold_perez"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_margin="5dp"
        android:layout_rowSpan="2"
        />

    <TextView

        android:layout_column="2"
        android:layout_row="6"
        android:layout_gravity="left"
        android:text="Harold Pérez"
        android:paddingLeft="8dp"
        android:fontFamily="Roboto-Thin"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/ID_F3"
        android:layout_column="2"
        android:layout_row="7"
        android:layout_gravity="left"
        android:text="ID 54078"
        android:paddingLeft="8dp"
        android:fontFamily="Roboto-Thin"
        android:textSize="18sp"
        android:textStyle="bold"/>
</GridLayout>