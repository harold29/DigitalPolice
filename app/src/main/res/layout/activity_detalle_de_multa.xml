<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pantallas_con_colores_chacao"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.retochacao.detalle_de_multa">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/boleta_peq_image_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/lista" />

        <TextView
            android:id="@+id/fecha_boleta_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/boleta_peq_image_view"
            android:paddingLeft="16dp"
            android:text="02/07/2013"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/num_boleta_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/fecha_boleta_text_view"
            android:layout_toRightOf="@id/boleta_peq_image_view"
            android:paddingLeft="16dp"
            android:text="#315324"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/status_boleta_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fecha_boleta_text_view"
            android:layout_toRightOf="@id/boleta_peq_image_view"
            android:paddingLeft="16dp"
            android:text="MOROSO"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#D50000"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/fecha_boleta_text_view"
            android:text="Bs 1.500,00"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#D50000"
            android:textStyle="bold" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/foto_persona_image_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:paddingBottom="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/student_id" />

        <TextView
            android:id="@+id/nombre_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/foto_persona_image_view"
            android:paddingBottom="30dp"
            android:paddingLeft="16dp"
            android:text="Fernando Saraiva"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/foto_persona_image_view"
            android:paddingLeft="16dp"
            android:paddingTop="30dp"
            android:text="V-21.615.116"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#000000" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/foto_mapa_image_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:paddingBottom="8dp"
            android:layout_marginRight="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/google_map" />

        <TextView
            android:id="@+id/ubicacion_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/foto_mapa_image_view"
            android:text="4ta Av. con 5ta Trans."
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/ubicacion_text_view"
            android:layout_toRightOf="@id/foto_mapa_image_view"
            android:text="Los Palos Grandes"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ubicacion_text_view"
            android:layout_toRightOf="@id/foto_mapa_image_view"
            android:text="Mal estacionado"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#000000" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/carrito_image_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:paddingBottom="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/carro" />

        <TextView
            android:id="@+id/tipo_vehiculo_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/carrito_image_view"
            android:paddingLeft="16dp"
            android:text="Tipo:      Sedan"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/placa_vehiculo_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tipo_vehiculo_text_view"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/carrito_image_view"
            android:paddingLeft="16dp"
            android:text="Placa:    MDK34F"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/color_vehiculo_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tipo_vehiculo_text_view"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/carrito_image_view"
            android:paddingLeft="16dp"
            android:text="Color:     Gris"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#000000" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:onClick="pasarADetalleVehiculo" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000000" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="#000000" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#000000" />


        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1">

        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/consultar_button"
            android:onClick="inicio"
            android:padding="8dp"
            android:text="Inicio"
            android:textSize="24dp" />

    </RelativeLayout>

</LinearLayout>
