<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pantallas_con_colores_chacao"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".detalle_de_vehiculo">

    <ImageView
        android:id="@+id/carro_en_detalle_image_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_alignParentTop="true"
        android:src="@drawable/carro" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingRight="8dp"
        android:background="#99c9dbef"
        android:paddingLeft="8dp"
        android:layout_weight="5">


        <TextView
            android:id="@+id/serial_carroceria_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="109102084474002BYD630931"
            android:textColor="#000000"
            android:textSize="20dp" />



        <TextView
            android:id="@+id/placa_text_view"
            android:layout_below="@id/serial_carroceria_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Placa:   MDK34F"
            android:layout_alignParentRight="true"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/nombre_text_view"
            android:layout_below="@id/placa_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FERNANDO SARAIVA"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/num_cedula_text_view"
            android:layout_width="wrap_content"
            android:layout_below="@id/nombre_text_view"
            android:layout_height="wrap_content"
            android:text="21.615.116"
            android:layout_alignParentLeft="true"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/marca_vehiculo_text_view"
            android:layout_width="wrap_content"
            android:layout_below="@id/nombre_text_view"
            android:layout_height="wrap_content"
            android:text="Dodge"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/modelo_vehiculo_text_view"
            android:layout_width="wrap_content"
            android:layout_below="@id/marca_vehiculo_text_view"
            android:layout_height="wrap_content"
            android:text="Dodge Forza LX"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/propietario_text_view"
            android:layout_width="wrap_content"
            android:layout_below="@id/modelo_vehiculo_text_view"
            android:layout_height="wrap_content"
            android:text="AUTOMOVIL PARTICULAR"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tipo_vehiculo_text_view"
            android:layout_width="wrap_content"
            android:layout_below="@id/propietario_text_view"
            android:layout_height="wrap_content"
            android:text="SEDAN"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/serial_niv_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tipo_vehiculo_text_view"
            android:text="Serial N.I.V:"
            android:textColor="#000000"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/niv_text_view"
            android:layout_width="wrap_content"
            android:layout_below="@id/serial_niv_text_view"
            android:layout_height="wrap_content"
            android:text="109102084474002BYD630931"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@id/niv_text_view"
            android:layout_height="wrap_content"
            android:text="400 KGS    2 EJES       GRIS"
            android:layout_alignParentLeft="true"
            android:textColor="#000000"
            android:textSize="20dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/consultar_button"
            android:text="Inicio"
            android:padding="8dp"
            android:textSize="24dp"
            android:onClick="inicio"
            />

    </RelativeLayout>


</LinearLayout>
